<%- include("./partials/loginhead"); %>

    
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form action="#" class="login100-form validate-form">
					<span class="login100-form-title p-b-33">
						<a  href="/" class="btn btn-danger">Back</a>

						Registration
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid Full name is required">
						<input class="input100" type="text" name="Fullname" placeholder="Full name">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Valid Username is required">
						<input class="input100" type="text" name="Username" placeholder="Username">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input" data-validate="Email Address is required example abc@xyz.com">
						<input class="input100" type="text" name="Email" placeholder="Email Address">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
						<input class="input100" type="password" name="pass" placeholder="Password">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
						<input class="input100" type="password" name="confirmpass" placeholder="Confirm Password">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div id="carform" class="wrap-input100 rs1 validate-input" data-validate="Secret Question is required">

						<input id="fname" class="input100" type="text" name="fname" placeholder="Secret word   &mdash; &ldquo; Please do not share with anyone  &rdquo;">
					  
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					

					<div class="wrap-input100 rs1 validate-input" data-validate="Phone Number is required">
						<input class="input100" type="tel" name="telephone" placeholder="Phone Number">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>


					

					 


					<div>
						<input class="" type="checkbox" name="check" required>
						<p>By Clicking you agree with our <a href="/about">Terms & Condition</a></p>
					</div>
					

					<div class="container-login100-form-btn m-t-20">
						<button class="login100-form-btn">
						Register
						</button>
					</div>

					

					<div class="text-center">
						<span class="txt1">
							Already have an account?
						</span>

						<a href="/login" class="txt2 hov1">
							Log In
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	<%- include("./partials/logintail"); %>

