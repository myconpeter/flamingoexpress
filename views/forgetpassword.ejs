<%- include("./partials/loginhead"); %>

    <form action="/forgetpassword" method="POST">
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">

				<form class="login100-form validate-form">
					<span class="login100-form-title p-b-33">
                        <a  href="/login" class="btn btn-danger">Back</a>

                        Forget Password
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid Username is required: abc@xyz.com">
						<input class="input100" type="username" name="username" placeholder="Username">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input" data-validate="Secret Word is required">
						<input class="input100" type="secret" name="secret" placeholder="Secret Word">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					

					<div class="container-login100-form-btn m-t-20">
						<button class="login100-form-btn">
							Create a new password
						</button>
					</div>

					

					
				</form>
			</div>
		</div>
	</div>
	
</form>

